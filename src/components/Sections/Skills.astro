---
import Section from "../Section.astro"

import { skills } from "@cv"
---

<Section title="Habilidades">
    <ul>
        {skills.map(({name}) => (
            <li>
                {name}
            </li>
        ))}
    </ul>
</Section>

<style>
    ul{
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    li{
        border-radius: 6px;
        background: #eee;
        color: black;
        font-size: .8rem;
        font-weight: 500;
        padding: .2rem .6rem;
    }
</style>