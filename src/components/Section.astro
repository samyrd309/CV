---
const {title, noprint} = Astro.props
---

<section class={noprint ? 'no-print' : ''}>
    {title && <h2>{title}</h2>}
    <slot/>
</section>

<style>
    section{
        max-width: 700px;
        margin : 0 auto 15px;
        padding: 1.5px;
    }
    h2{
        margin-bottom: 7px;
        font-weight: 700;
        line-height: 1.5;
        font-size: 1.5rem;
    }
</style>